<section class="dark:bg-gray-700">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-0">
    <div class="w-full p-6 bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md dark:bg-gray-800 dark:border-gray-700 sm:p-8">
      <%= form_with model: @project do |form| %>
        <div class="form-group mb-6">
          <%= form.label :title %><br>
          <%= form.text_field :title, class: "form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" %>
          <% @project.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div class="form-group mb-6">
          <%= form.label :description %><br>
          <%= form.text_area :description, rows: "5", class: "form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" %>
          <% @project.errors.full_messages_for(:description).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div class="flex justify-center">
          <div class="mb-3 xl:w-96">
            <%= form.label :status, class: "form-check-label inline text-gray-800 dark:text-gray-200" %><br>
            <%= form.select(:status, ['active', 'closed', 'archived'], {selected: "active"}, { :class => "form-select appearance-none block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding bg-no-repeat border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"}) %>
          </div>
        </div>

        <div>
          <%= form.submit class: "w-full px-6 py-2.5 bg-blue-600 dark:bg-slate-900 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 dark:hover:bg-slate-700 hover:shadow-lg focus:bg-blue-700 dark:focus:bg-slate-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 dark:active:bg-slate-600 active:shadow-lg transition duration-150 ease-in-out cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</section>