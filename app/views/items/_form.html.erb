<section class="dark:bg-gray-700">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-0">
    <div class="w-full p-6 bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md dark:bg-gray-800 dark:border-gray-700 sm:p-8">
      <form action="<%= project_path %>/items" accept-charset="UTF-8" method="post">
        <div class="field">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" autocomplete="off">
        </div>
        <div class="form-group mb-6">
          <input type="text" class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" id="item_title" name="item[title]" placeholder="Item title">
        </div>
        <div class="form-group mb-6">
          <textarea class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" id="item_body" name="item[body]" rows="5" placeholder="Item description"></textarea>
        </div>
        <div class="flex justify-center">
          <div class="mb-3 xl:w-96">
            <label class="form-check-label inline text-gray-800 dark:text-gray-200" for="item-status">Status</label>
            <select class="form-select appearance-none block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding bg-no-repeat border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" aria-label="Default select example" id="item_status" name="item[status]">
                <option value="open">Open</option>
                <option value="in progress">In progress</option>
                <option value="resolved">Resolved</option>
                <option value="archived">Archived</option>
            </select>
          </div>
        </div>
        <input type="submit" name="commit" value="Create Item" data-disable-with="Create Item" class="w-full px-6 py-2.5 bg-blue-600 dark:bg-slate-900 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 dark:hover:bg-slate-700 hover:shadow-lg focus:bg-blue-700 dark:focus:bg-slate-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 dark:active:bg-slate-600 active:shadow-lg transition duration-150 ease-in-out">
      </form>
    </div>
  </div>
</section>