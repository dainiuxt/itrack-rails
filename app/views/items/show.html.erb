<section class="bg-white dark:bg-gray-700">
  <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
    <h2 class="mb-8 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"><%= @item.title %></h2>
    <div class="mb-10">
      <h3 class="flex items-center mb-4 text-lg font-medium text-gray-900 dark:text-white">
          From project&nbsp;<a href="<%= projects_path %>/<%= @item.project_id %>" class="underline"><%= Project.find(@item.project_id).title %></a>
      </h3>
      <h3 class="flex items-center mb-4 text-lg font-medium text-gray-900 dark:text-white">
        <span class="mr-4 px-2 py-1 font-semibold leading-tight text-yellow-700 bg-yellow-100 rounded-full"> <a href="<%= projects_path %>/<%= @item.project_id %>/items/<%= @item.id %>/edit" class="underline"><%= Project.find(@item.project_id).title %></a> <%= link_to "Edit", edit_item_path(@item) %> </span>
        <span class="mr-4 px-2 py-1 font-semibold leading-tight text-red-700 bg-red-100 rounded-full"> <%= link_to "Delete", item_path(@item), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %> </span>
        <svg class="flex-shrink-0 mr-2 w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path></svg>
          Item status:  <%= @item.status %>
      </h3>
      <p class="text-gray-500 dark:text-gray-400"><%= @item.body %></p>
    </div>
  </div>
</section>