<% unless issue.archived? %>
<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
  <td class="p-4 w-4">
      <div class="flex items-center">
          <input id="checkbox-table-search-1" type="checkbox" class="w-4 h-4 text-blue-600 bg-gray-100 rounded border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
          <label for="checkbox-table-search-1" class="sr-only">checkbox</label>
      </div>
  </td>
  <th scope="row" class="flex items-center py-4 px-6 text-gray-900 whitespace-nowrap dark:text-white">
      <div class="pl-3">
          <div class="text-base font-semibold"><%= issue.title %></div>
          <div class="font-normal text-gray-500">Some substring</div>
      </div>  
  </th>
  <td class="py-4 px-6">
      <%= issue.body %>
  </td>
  <td class="py-4 px-6">
      <div class="flex items-center">
          <div class="h-2.5 w-2.5 rounded-full bg-green-400 mr-2"></div> <%= issue.status %>
      </div>
  </td>
  <td class="py-4 px-6">
      <span class="mx-4 px-2 py-1 font-semibold leading-tight text-yellow-700 bg-yellow-100 rounded-full"> <a href="/projects/<%= issue.project_id %>/issues/<%= issue.id %>/edit">Edit</a> </span>
      <%= link_to "Delete issue", [issue.project, issue], class: "font-medium text-blue-600 dark:text-blue-500 hover:underline", data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  } %>
  </td>
</tr>

<% end %>
